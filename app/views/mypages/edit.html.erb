<div class="row">
  <%= form_with(url: "/mypage", method: "put" , class: "col s12", local: true,  multipart: true ) do %>
    <div class="file-field input-field">
      <div class="btn">
        <span>ファイル選択</span>
        <%=  file_field(:user, :avatar) %>

        <%#<input type="file" multiple>%>
        
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" placeholder="プロファイル写真">
      </div>
    </div>
    <div class="input-field">
      <%= label_tag(:user_name, "名前") %>
      <%= text_field_tag(:user_name) %>
    </div>
    <div>
      <button class="btn waves-effect waves-light" type="submit" name="action">設定
      </button>
    </div>
  <% end %>
</div>
